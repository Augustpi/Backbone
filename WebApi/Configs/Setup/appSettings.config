<?xml version="1.0" encoding="utf-8"?>
<appSettings>

  <!-- Email service etc. settings vary on based on environment type -->
  <!-- Local | Test | Live -->
  <add key="Environment" value="Local" />

  <!-- Origin of the client application, will be used in CORS policy -->
  <add key="DefaultClientOrigin" value="http://localhost:4200" />

  <!-- Determines whether SSL connection required for api & odata calls & email service -->
  <add key="EnableSsl" value="false" />

  <!-- User related emails will be from this address (leave it blank in case you don't want to send user related emails) -->
  <add key="FromEmailAddress" value="" />
  <add key="FromEmailAddressDisplayName" value="" />

  <!-- Notification emails will be send to this address (leave it blank in case you don't want to send notification emails) -->
  <add key="NotificationEmailAddress" value="" />

  <!-- Google Analytics Tracking ID -->
  <add key="GoogleAnalyticsTrackingID" value="" />  

</appSettings>
